<main>
  <p id= "notice"></p>
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  		<% if @book1.errors.any? %>
        <%= @book1.errors.count %>error prohibited this obj from being saved
        <ul>
         <% @book1.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>


  		<%= form_with model: @book1 do |f| %>
  		<div class="form-group">
  		  <label for="book_title">Title</label>
  		  <%= f.text_field :title, class: "form-control book_title" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control book_body" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update Book", class: "btn btn-success" %>
      </div>
      </form>
      <% end %>
      <a><%= link_to "Show", book_path %></a>
       |
  		<a><%= link_to "Back", books_path %></a>
      </div>
    </div>
  </div>
</main>